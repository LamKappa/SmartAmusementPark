ninja_required_version = 1.7.2

rule gn
  command = ../../../prebuilts/build-tools/linux-x86/bin/gn --root=../../.. -q --dotfile=../../../build/lite/.gn --script-executable=/usr/bin/python gen .
  description = Regenerating ninja files

build build.ninja: gn
  generator = 1
  depfile = build.ninja.d

